{
    "source": {
      "include": ["./"],
      "includePattern": ".+\\.ts(doc|x)?$",
      "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown", "node_modules/better-docs/typescript"],
    "templates": {
      "cleverLinks": true,
      "monospaceLinks": true,
  
      "better-docs": {
        "name": "Home Reach Documentation",
  
        "title": "Home Reach Technical Documentation",
        "hideGenerator": false,
        "navLinks": [
          {
            "label": "GitLab Repo",
            "href": "https://gitlab.com/"
          },
          {
            "label": "Live Application",
            "href": "https://home-reach.org"
          }
        ]
      }
    },
    "opts": {
      "recurse": true,
      "destination": "./docs/",
      "template": "node_modules/better-docs"
    }
  }
  